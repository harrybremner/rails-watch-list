
<div class="cards">
      <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <% end %>
        <h2><%= link_to list.name, list_path(list) %></h2>
        <br>
        <br>
        <h4><%= link_to "Delete", list_path(list) , data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></h4>
        </div>
      <% end %>
</div>

<br>

<%= link_to "Add a movie list?", new_list_path(@lists), class: "btn btn-primary" %>
